{
  "manifest_version": 3,
  "name": "Productivity Buddy",
  "version": "1.0",
  "description": "Block websites",
  "permissions": ["activeTab", "storage", "webRequest", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Site Blocker"
  },
  "host_permissions": ["<all_urls>"]
}
