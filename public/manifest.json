{
  "manifest_version": 3,
  "name": "Productivity Buddy",
  "version": "1.0",
  "description": "A productivity extension that blocks distracting websites and helps users stay focused with a timer.",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "tabs",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["<all_urls>"]
}
